{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"outDir": "dist",
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"strictFunctionTypes": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"declaration": true,
		"strict": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}